          ["Minecraft","https://education.minecraft.net/"],["Apple Swift Playground","https://www.apple.com/swift/playgrounds/"],
          ["ToonTalk","http://www.toontalk.com/"],["Linotte","http://langagelinotte.free.fr/wordpress/"],["Scratch","https://scratch.mit.edu/"],
          ["Beebot","https://www.bee-bot.us/"],["CodyRoby","http://codeweek.it/codyroby/"],["CodeCombat","https://codecombat.com/"],
          ["Blockly","https://developers.google.com/blockly/"],["KidsRuby","http://kidsruby.com/"],["DuckQuack","https://github.com/minimalprocedure/DuckQuack"],
          ["Phratch","http://www.phratch.com/"],["Beetle Blocks","http://beetleblocks.com/"],["Touch Develop","https://www.touchdevelop.com/"],
          ["Hackety Hack","http://hackety.com/"],["LibreLogo","http://librelogo.org"],["StarLogo","http://education.mit.edu/portfolio_page/starlogo-tng/"],
