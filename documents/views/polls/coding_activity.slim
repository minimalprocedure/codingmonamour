  .form-group.row
    fieldset.col-md-2
      label Età media*
      select.form-control type="number" name="activity[average_age]"
        ruby:
          options = [["0", "Non indicata"],["3-6", "3-6"],["6-9", "6-9"],["9-12", "9-12"],["12-15", "12-15"],
            ["15-18", "15-18"],["18-21", "18-21"],["21-25", "21-25"],["25-35", "25-35"],
            ["35-45", "35-45"],["45-55", "45-55"],["55-100", "Oltre 55"]]
        - options.each do |n|
          - if params[:activity][:average_age].to_s == n[0]
            option value="#{n[0]}" selected="1"
              =n[1]
          - else
            option value="#{n[0]}"
              =n[1] 
      span.help-block Età media dei partecipanti.
    fieldset.col-md-2
      label Maschi*
      input.form-control type="number" name="activity[males]" value=params[:activity][:males]
      span.help-block Numero dei partecipanti di genere maschile
    fieldset.col-md-2
      label Femmine*
      input.form-control type="number" name="activity[females]" value=params[:activity][:females]
      span.help-block Numero dei partecipanti di genere femminile

    fieldset.col-md-3      
        label Data inizio*
        div.input-group.date.datetime-input
          input.form-control type="datetime" name="activity[date_begin]" value=params[:activity][:date_begin]
          span class="input-group-addon"
            span class="glyphicon glyphicon-calendar"
        span.help-block Data di inizio delle attività di coding (gg/mm/aaaa).

    fieldset.col-md-3      
        label Data termine*
        div.input-group.date.datetime-input
          input.form-control type="datetime" name="activity[date_end]" value=params[:activity][:date_end]
          span class="input-group-addon"
            span class="glyphicon glyphicon-calendar"
        span.help-block Data di termine delle attività di coding (gg/mm/aaaa).

  h2 Competenze del docente

  .form-group.row
    fieldset.col-md-2
      label Età*
      select.form-control type="text" name="teacher_skills[age]"
        ruby:
          options = [["0", "Non indicata"],["18-21", "18-21"],["21-25", "21-25"],
            ["25-35", "25-35"],["35-45", "35-45"],["45-55", "45-55"],["55-100", "Oltre 55"]]
        - options.each do |n|
          - if params[:teacher_skills][:age].to_s == n[0]
            option value="#{n[0]}" selected="1"
              =n[1]
          - else
            option value="#{n[0]}"
              =n[1] 
      span.help-block Indicare la fascia d'età.
    fieldset.col-md-2
      label Genere
      select.form-control name="teacher_skills[sex]"
        ruby:
          options = [["0", "Non indicata"],["m", "Maschile"],["f", "Femminile"]]
        - options.each do |n|
          - if params[:teacher_skills][:sex].to_s == n[0]
            option value="#{n[0]}" selected="1"
              =n[1]
          - else
            option value="#{n[0]}"
              =n[1]  
      span.help-block Indicare il genere dell'insegnante (facoltativo)
    fieldset.col-md-4
      label Ruolo e/o materia*
      input.form-control type="text" name="teacher_skills[role]" value=params[:teacher_skills][:role]
      span.help-block Indicare il ruolo svolto nella scuola (es.: Animatore Digitale) e/o la materia insegnata.
    fieldset.col-md-4
      label Associazioni o Gruppi di appartenza.
      input.form-control type="text" name="teacher_skills[groups]" value=params[:teacher_skills][:groups]
      span.help-block Indicare possibilmente in campi separati da punto e virgola i gruppi o le associazioni di appartenenza.

  .form-group.row
    fieldset.col-md-6
      label Conoscenze*
      textarea.form-control rows="4" name="teacher_skills[knowledge]"
        ==params[:teacher_skills][:knowledge]
      span.help-block Indicare possibilmente in campi separati da punti e virgola le conoscenze attinenti al contesto.
    fieldset.col-md-6
      label Formazione*
      textarea.form-control rows="4" name="teacher_skills[training]" 
        ==params[:teacher_skills][:training]
      span.help-block Indicare possibilmente in campi separati da punto e virgola gli ambiti di formazione attinenti al contesto.

  h2 Progetto

  .form-group.row
    fieldset.col-md-4
      label Tempo previsto*
      input.form-control type="text" name="projects[estimated_time_in_days]" value=params[:projects][:estimated_time_in_days]
      span.help-block Indicare in ore il tempo previsto per lo svolgimento della attività.
    fieldset.col-md-3      
        label Data inizio*
        div.input-group.date.datetime-input
          input.form-control type="datetime" name="projects[date_begin]" value=params[:projects][:date_begin]
          span class="input-group-addon"
            span class="glyphicon glyphicon-calendar"
        span.help-block Indicare la data di inizio della attività (gg/mm/aaaa).
    fieldset.col-md-3      
        label Data fine*
        div.input-group.date.datetime-input
          input.form-control type="datetime" name="projects[date_end]" value=params[:projects][:date_end]
          span class="input-group-addon"
            span class="glyphicon glyphicon-calendar"
        span.help-block Indicare la data di fine della attività (gg/mm/aaaa).

  .form-group.row
    fieldset.col-md-4
      label Obiettivo*
      textarea.form-control rows="4" name="projects[goals]" 
        ==params[:projects][:goals]
      span.help-block Indicare gli scopi raggiunti o previsti.
    fieldset.col-md-4
      label Attività proposte*
      textarea.form-control rows="4" name="projects[activity]" 
        ==params[:projects][:activity]
      span.help-block Indicare le attività proposte od eseguite.
    fieldset.col-md-4
      label Buone pratiche
      textarea.form-control rows="4" name="projects[best_practices]" 
        ==params[:projects][:best_practices]
      span.help-block Indicare le <em>buone pratiche</em> utilizzate.



  .form-group.row
    fieldset.col-md-12.row      
      ruby:
        ambients = [
          ["Scratch 2.x", "Scratch2","https://scratch.mit.edu/"],
          ["AgentSheets and AgentCubes", "AgentSheets and AgentCubes","http://www.agentsheets.com/"],
